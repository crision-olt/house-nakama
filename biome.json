{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["*.json"]
	},
	"formatter": {
		"enabled": true,
		"bracketSpacing": true,
		"lineEnding": "lf",
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"bracketSpacing": true,
			"arrowParentheses": "always",
			"semicolons": "always",
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5",
			"attributePosition": "multiline"
		}
	}
}
